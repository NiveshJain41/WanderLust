<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container mt-5">
    <!-- Editing Listing Form -->
    <h2 class="mb-4 text-center text-primary">Edit Listing</h2>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate enctype="multipart/form-data" class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title is updated.</div>
        <div class="invalid-feedback">Please enter a valid Title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          rows="4"
          required
        ><%= listing.description %></textarea>
        <div class="valid-feedback">Description is updated.</div>
        <div class="invalid-feedback">Please enter a valid Description.</div>
      </div>

      <div class="mb-3">
        Current Listing Image <br>
        <img src="<%= originalImageUrl %>" alt="lisitng image">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload a new image</label>
        <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
        />
        <div class="valid-feedback">Image is updated.</div>
        <div class="invalid-feedback">Please enter a valid Image.</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹)</label>
        <input
          id="price"
          name="listing[price]"
          value="<%= listing.price %>"
          type="number"
          class="form-control"
          required
        />
        <div class="valid-feedback">Price is updated.</div>
        <div class="invalid-feedback">Please enter a valid Price.</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Location is updated.</div>
        <div class="invalid-feedback">Please enter a valid Location.</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          id="country"
          name="listing[country]"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Country is updated.</div>
        <div class="invalid-feedback">Please enter a valid Country .</div>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary">Back</a>
        <button type="submit" class="btn btn-warning">Update Listing</button>
      </div>
    </form>
  </div>
</body>
