<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <h3 class="my-3 text-center">Add a New Listing</h3>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <form
        method="POST"
        action="/listings"
        class="needs-validation"
        enctype="multipart/form-data"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            id="title"
            name="listing[title]"
            placeholder="Enter Title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title is added successfully.</div>
          <div class="invalid-feedback">Please enter a valid Title.</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Description is added successfully.</div>
          <div class="invalid-feedback">Please enter a valid Description.</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            id="image"
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            placeholder="Enter price"
            class="form-control"
            required
          />
          <div class="valid-feedback">Price is added successfully.</div>
          <div class="invalid-feedback">Please enter a valid Price.</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            name="listing[location]"
            placeholder="Enter location"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Location is added successfully.</div>
          <div class="invalid-feedback">Please enter a valid Location.</div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            placeholder="Enter country"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Country is added successfully.</div>
          <div class="invalid-feedback">Please enter a valid Country.</div>
        </div>

        <button class="btn btn-success w-100">Add Listing</button>
      </form>
    </div>
  </div>
</div>
